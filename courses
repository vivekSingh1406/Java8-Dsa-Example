<table class="table table-bordered table-striped mt-4">
    <thead>
        <tr>
            <th>ID</th><th>Name</th><th>Description</th><th>Start</th><th>End</th><th>Instructor</th><th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr th:each="course : ${courses}">
            <td th:text="${course.courseId}"></td>
            <td th:text="${course.courseName}"></td>
            <td th:text="${course.description}"></td>
            <td th:text="${course.startDate}"></td>
            <td th:text="${course.endDate}"></td>
            <td th:text="${course.instructor.fullName}"></td>
            <td>
                <form th:action="@{/courses/{id}(id=${course.courseId})}" method="post" style="display:inline;">
                    <input type="hidden" name="_method" value="put"/>
                    <button type="submit" class="btn btn-sm btn-warning">Edit</button>
                </form>
                <form th:action="@{/courses/{id}(id=${course.courseId})}" method="post" style="display:inline;">
                    <input type="hidden" name="_method" value="delete"/>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    </tbody>
</table>
